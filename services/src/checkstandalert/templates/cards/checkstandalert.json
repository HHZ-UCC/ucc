{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "{{ host }}/static//schwarzIT.png",
                    "horizontalAlignment": "Center",
                    "separator": true
                },
                {
                    "type": "Image",
                    "url": "{{ host }}/static/checkstand.png",
                    "spacing": "Medium",
                    "horizontalAlignment": "Center",
                    "separator": true
                },
                {
                    "type": "Image",
                    "url": "{{ host }}/static/anstehend.png",
                    "horizontalAlignment": "Center"
                }
            ],
            "separator": true
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Neue Kassenanfrage wurde um {{07.04.2020 15:19}} angefragt.\n",
                    "separator": true,
                    "horizontalAlignment": "Center",
                    "wrap": true,
                    "fontType": "Default",
                    "isSubtle": true,
                    "size": "Medium",
                    "maxLines": 3,
                    "weight": "Bolder"
                }
            ]
        },
         {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Annehmen",
                                    "data": {
                                        "payload" : {
                                            "type": "assign_checkstand",
                                            "alertId" : "{{ alert.id }}"
                                        },
                                        "target" : "{{ host }}/maintenance/bot/action"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "height": "stretch",
            "horizontalAlignment": "Center"
        }
    ]
}