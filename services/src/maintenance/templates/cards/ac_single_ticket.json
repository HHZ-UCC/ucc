{
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "altText": "",
                    "url": "{{ host }}/static/Wartungsauftrag.png"
                },
                {
                    "type": "TextBlock",
                    "text": "{{ ticket.description }}",
                    "horizontalAlignment": "Center",
                    "id": "{{ ticket.id }}",
                    "imBack": "{{ ticket.id }}",
                    "weight": "Bolder"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "altText": "",
                    "url": "{{ host }}/static/horizontal.png"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "altText": "",
                                    "url": "{{ host }}/static/space.png"
                                }
                            ],
                            "horizontalAlignment": "Right",
                            "verticalContentAlignment": "Center",
                            "width": 6
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "ImageSet",
                                    "images": [
                                        {
                                            "type": "Image",
                                            "size": "Small",
                                            "altText": "",
                                            "url": "{{ host }}/static/device.png",
                                            "horizontalAlignment": "Right",
                                            "spacing": "Medium"
                                        }
                                    ],
                                    "spacing": "Small",
                                    "imageSize": "Small"
                                }
                            ],
                            "horizontalAlignment": "Left",
                            "width": 3
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "{{ ticket.fk_device.type }}",
                                    "horizontalAlignment": "Left",
                                    "spacing": "Small"
                                }
                            ],
                            "width": 15,
                            "horizontalAlignment": "Center",
                            "height": "stretch",
                            "verticalContentAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "   ",
                                    "maxLines": 20
                                }
                            ],
                            "horizontalAlignment": "Right",
                            "verticalContentAlignment": "Center",
                            "width": 6
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "ImageSet",
                                    "images": [
                                        {
                                            "type": "Image",
                                            "size": "Small",
                                            "altText": "",
                                            "url": "{{ host }}/static/location.png",
                                            "horizontalAlignment": "Right",
                                            "spacing": "Medium"
                                        }
                                    ],
                                    "spacing": "Small",
                                    "imageSize": "Small"
                                }
                            ],
                            "horizontalAlignment": "Left",
                            "width": 3
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "{{ ticket.fk_device.location }}",
                                    "horizontalAlignment": "Left",
                                    "spacing": "Small"
                                }
                            ],
                            "width": 15,
                            "horizontalAlignment": "Center",
                            "height": "stretch",
                            "verticalContentAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "horizontalAlignment": "Right",
                            "verticalContentAlignment": "Center",
                            "width": 6,
                            "items": [
                                {
                                    "type": "Image",
                                    "altText": "",
                                    "url": "{{ host }}/static/space.png"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "ImageSet",
                                    "images": [
                                        {
                                            "type": "Image",
                                            "size": "Small",
                                            "altText": "",
                                            "url": "{{ host }}/static/timestamp.png",
                                            "horizontalAlignment": "Right",
                                            "spacing": "Medium"
                                        }
                                    ],
                                    "spacing": "Small",
                                    "imageSize": "Small"
                                }
                            ],
                            "horizontalAlignment": "Left",
                            "width": 3
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "{{ ticket.created_at }}",
                                    "horizontalAlignment": "Left",
                                    "spacing": "Small"
                                }
                            ],
                            "width": 15,
                            "horizontalAlignment": "Center",
                            "height": "stretch",
                            "verticalContentAlignment": "Center"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Image",
            "altText": "",
            "url": "{{ host }}/static/horizontal.png"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "{{ host }}/static/space.png"
                        }
                    ],
                    "horizontalAlignment": "Center",
                    "height": "stretch"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Annehmen",
                                    "data": {
                                        "payload" : {
                                            "type": "assign_task",
                                            "ticketId" : "{{ ticket.id }}",
                                            "deviceId" : "{{ ticket.fk_device.id }}"
                                        },
                                        "target" : "{{ host }}/maintenance/bot/action"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "{{ host }}/static/space.png"
                        }
                    ]
                }
            ],
            "height": "stretch",
            "horizontalAlignment": "Center"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}