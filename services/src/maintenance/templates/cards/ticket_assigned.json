{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "{{ host }}/services/static/schwarzIT.png",
                    "horizontalAlignment": "Center",
                    "separator": true
                },
                {
                    "type": "Image",
                    "url": "{{ host }}/services/static/best2_.png",
                    "spacing": "Medium",
                    "horizontalAlignment": "Center",
                    "separator": true
                }
            ],
            "separator": true
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Das Ticket wurde an {{ employee.surname }} zugewiesen.",
                    "separator": true,
                    "horizontalAlignment": "Center",
                    "wrap": true,
                    "fontType": "Default",
                    "isSubtle": true,
                    "size": "Medium",
                    "maxLines": 3,
                    "weight": "Bolder"
                }
            ],
            "separator": true
        }
    ]
}